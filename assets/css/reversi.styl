@import "_normalize.styl"
@import "nib"

#canvas
  position relative
  margin: 0 auto

  .board
    background-color black
    position absolute
    z-index 0

  .board-cell
    position absolute
    z-index 1
    //border-width 4px
    //border-color black
    //border-style solid
    background-color green

  .white-cell, .black-cell, .empty-cell, .hint-cell
    z-index 2
    position absolute
    //border-radius 25px
  
  .white-cell
    background-color white
    box-shadow 2px 2px 2px rgba(0, 0, 0, 0.5), inset #666 -2px -2px 8px
    background-image -webkit-gradient(linear, left top, right bottom, from(#ffffff), to(#050505))
    background-image linear-gradient(left top, #ffffff, #050505)
  
  .black-cell
    background-color black
    box-shadow 2px 2px 2px rgba(0, 0, 0, 0.5), inset rgba(#666, 0.8) -2px -2px 8px
    background-image -webkit-gradient(linear, left top, right bottom, from(#444), to(#000))
    background-image linear-gradient(left top, #444, #000)
  

  .empty-cell
    opacity 0

  .hint-cell
    background-color black
    opacity 0.382
